##:
#h: Usage: $0 [-mg] SEDCMD [OUTDIR]
#h:
#h: This program reads a file list, performs a transformation with sed and
#h: then copies to that new path in OUTDIR (directories are created). Files
#h: are only copied once.
#h:
#h:     -m : Use 'mv' instead of 'cp'.
#h:     -g : Use 'git mv' instead of 'cp'.
##:
cp_with_sed() {
    local OPTIND optopt= o_m= o_g=
    while getopts "mg" optopt;do # OPTARG
        case $optopt in
            m) local o_m=y;;
            g) local o_g=y;;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    local sedcmd="$1" outdir="$2" fr= to=
    while read fr;do
        local to="`echo "${fr}" | sed "${sedcmd}"`"
        local count="`echo "${to}" | wc -l`"
        if test @"${count}" = @"0";then
            continue
        elif test ! @"${count}" = @"1";then
            echo "cp-with-sed: error: File ${fr} replaces to more than one." >&2
            exit 1
        fi
        if test ! -n "${outdir}";then
            echo "${to}"
            continue
        fi
        local to="${outdir}/${to}"
        echo ".-- ${fr}" >&2
        echo "'-> ${to}" >&2
        mkdir -p "`dirname "${to}"`"
        if test @"${o_m}" = @"y";then
            mv "${fr}" "${to}"
        elif test @"${o_g}" = @"y";then
            git mv "${fr}" "${to}"
        else
            cp "${fr}" "${to}"
        fi
    done
    
}
if test @"`basename "$0"`" = @"cp-with-sed";then
    if test ! "$#" = "0";then
        cp_with_sed "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
